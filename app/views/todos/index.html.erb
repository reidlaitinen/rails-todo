<h1>To-Do List</h1>
<p>
  <%= link_to 'Create New Item', new_todo_path %>
</p>
<% @todos.each do |todo| %>
  <h2><%= todo.title %></h2>
  <h3>(Priority: <%= todo.priority %>)</h3>
  <%= link_to 'Show', todo_path(todo) %>
  <%= link_to 'Edit', edit_todo_path(todo) %>
  <%= link_to 'Delete', todo_path(todo), method: :delete %>
<% end %>